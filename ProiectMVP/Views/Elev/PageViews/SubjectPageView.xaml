<UserControl x:Class="ProiectMVP.Views.Elev.PageViews.SubjectPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProiectMVP.Views.Elev.PageViews"
             Style="{StaticResource PageStyle}"
             mc:Ignorable="d"  Background="#f2d7d5"
             d:DesignHeight="650" d:DesignWidth="900">
	
    <Grid>
	    <Grid.RowDefinitions>
		    <RowDefinition Height="100"></RowDefinition>
		    <RowDefinition Height="200"></RowDefinition>
		    
	    </Grid.RowDefinitions>

	    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Grid.Row="0" Text="PAGINA SUBJECT"></TextBlock>

	    <DataGrid Grid.Row="1" Width="450" Height="200" VerticalScrollBarVisibility="Visible" Background="AntiqueWhite" Margin="50,0,50,0">
		    <DataGrid.Columns>
			    <DataGridTextColumn Header="ID" Width="50"></DataGridTextColumn>
			    <DataGridTextColumn Header="SUBJECT" Width="150"></DataGridTextColumn>
			    <DataGridTextColumn Header="TEACHER" Width="250"></DataGridTextColumn>
		    </DataGrid.Columns>
	    </DataGrid>
	</Grid>

</UserControl>
