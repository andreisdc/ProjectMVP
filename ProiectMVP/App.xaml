<Application x:Class="ProiectMVP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewmodels="clr-namespace:ProiectMVP.ViewModels"
             xmlns:admin="clr-namespace:ProiectMVP.Views.Admin"
             xmlns:teacher="clr-namespace:ProiectMVP.Views.Profesor">
    <Application.Resources>
        <DataTemplate x:Key="AdminTemplate" DataType="{x:Type viewmodels:AdminViewModel}">
            <admin:AdminView></admin:AdminView>
        </DataTemplate>
        <DataTemplate x:Key="TeacherTemplate" DataType="{x:Type viewmodels:TeacherViewModel}">
            <teacher:ProfesorView></teacher:ProfesorView>
        </DataTemplate>
    </Application.Resources>
</Application>
