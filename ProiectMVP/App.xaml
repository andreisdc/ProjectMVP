<Application x:Class="ProiectMVP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:viewmodels="clr-namespace:ProiectMVP.ViewModel"
             xmlns:admin="clr-namespace:ProiectMVP.View.Admin"
             xmlns:teacher="clr-namespace:ProiectMVP.View.Profesor">

    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:AdminViewModel}">
            <admin:AdminView></admin:AdminView>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:TeacherViewModel}">
            <teacher:ProfesorView></teacher:ProfesorView>
        </DataTemplate>
	</Application.Resources>

</Application>
